<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Device features (keep optional unless truly required) -->
    <uses-feature android:name="android.hardware.telephony" />
    <uses-feature android:name="android.hardware.fingerprint" android:required="false" />

    <!-- Network & core -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- Biometrics (optional if you use it) -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />

    <!-- Audio (if you record anywhere in app) -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- Calling (only if you directly place calls) -->
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <!-- Phone state (avoid privileged variant) -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- REMOVE: privileged/system-only permission (Play rejects) -->
    <!-- <uses-permission android:name="android.permission.READ_PRIVILEGED_PHONE_STATE"
         tools:ignore="ProtectedPermissions" /> -->

    <!-- Storage / Media (prefer modern media permission on Android 13+) -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <!-- Legacy storage perms: uncomment ONLY if you truly need them -->
    <!-- <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/> -->
    <!-- <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> -->
    <!-- <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"/> -->

    <!-- Notifications (declare once) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Avoid broad package visibility unless approved by policy -->
    <!-- <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES"/> -->

    <application
        android:name="${applicationName}"
        android:label="Sara777"
        android:icon="@mipmap/launcher_icon"
        android:hardwareAccelerated="true"
        android:enableOnBackInvokedCallback="true"
        android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode">

        <!-- Default FCM channel + icon (optional but recommended) -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="default_channel" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_launcher" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode">

            <!-- Splash/background theme before Flutter draws -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Flutter embedding -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>

    <!-- Android 11+ package visibility: declare what you need to open -->
    <queries>
        <!-- WhatsApp native scheme (for whatsapp://send) -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="whatsapp" />
        </intent>

        <!-- WhatsApp https fallback (wa.me links) -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="https" android:host="wa.me" />
        </intent>

        <!-- Optional: generic https viewer fallback -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="https" />
        </intent>

        <!-- Optional: WhatsApp package visibility -->
        <package android:name="com.whatsapp" />

        <!-- UPI apps (optional; keep if you launch these) -->
        <package android:name="com.google.android.apps.nbu.paisa.user" /> <!-- Google Pay -->
        <package android:name="com.phonepe.app" />                         <!-- PhonePe -->
        <package android:name="net.one97.paytm" />                         <!-- Paytm -->

        <!-- UPI scheme (single declaration only) -->
        <intent>
            <action android:name="android.intent.action.VIEW"/>
            <data android:scheme="upi"/>
        </intent>
    </queries>

</manifest>

